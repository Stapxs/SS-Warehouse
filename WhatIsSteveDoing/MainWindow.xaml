<Window x:Class="WhatIsSteveDoing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WhatIsSteveDoing"
        mc:Ignorable="d"
        Title="WhatIsTheSteveDoing"
        Height="495.6"
        Width="800"
        ResizeMode="NoResize"
        >
    <Grid>
        <TabControl>
            <TabItem Header=" 主  页 ">
                <StackPanel Margin="20">
                    <Grid>
                        <TextBlock Text="WhatIsTheSteveDoing" FontSize="19" Margin="0,0,0,10"/>
                        <TextBlock Text="Xiaoshou Bot 前台应用同步工具" Margin="0,9,0,10" HorizontalAlignment="Right"/>
                    </Grid>
                    <TextBlock Text="公告" FontSize="16" Margin="0,10,0,0"></TextBlock>
                    <ScrollViewer Height="336">
                        <TextBlock x:Name="note" FontSize="14" Text="没有公告！" Margin="10,5,0,0"></TextBlock>
                    </ScrollViewer>
                </StackPanel>
            </TabItem>
            <TabItem Header=" 设  置 ">
                <ScrollViewer>
                    <StackPanel Margin="50,0">
                        <TextBlock Text="你的名字，用于搜索" Margin="0,10,0,0"/>
                        <TextBox x:Name="name" Margin="0,10,0,0" Height="30"/>
                        <TextBlock Text="你的分类组，用于防止其他群组的人调取到你的数据" Margin="0,10,0,0"/>
                        <TextBox x:Name="group" Margin="0,10,0,0" Height="30"/>
                        <TextBlock Text="你的 QQ，选填，填写后可以使用 QQ 号获取" Margin="0,10,0,0"/>
                        <TextBox x:Name="qq" Margin="0,10,0,0" Height="30"/>
                        <Button x:Name="save" Content="保存设置" Height="30" Click="save_Click" Margin="0,10,0,0"/>
                        <Grid Margin="0,20,0,0"></Grid>
                        <Border BorderThickness="0,1,0,0" BorderBrush="#ABADB3"></Border>
                        <TextBlock Text="其他功能" Margin="0,10,0,0"/>
                        <Button x:Name="hidd" Content="隐藏窗口" Height="30" Click="hidd_Click" Margin="0,10,0,0"/>
                        <Button x:Name="setautohidd" Content="设置为启动自动隐藏窗口" Height="30" Click="setautohidd_Click" Margin="0,10,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header=" 屏  蔽 ">
                <StackPanel Margin="50,10,50,10">
                    <TextBlock Text="添加关键词屏蔽，以防止隐私泄露。显示在下面列表内的关键词将不会被同步。（支持正则表达式）"></TextBlock>
                    <Grid Height="403">
                        <ListBox Margin="0,10,238,10" x:Name="hidlist"></ListBox>
                        <StackPanel Margin="470,0,0,0">
                            <TextBox x:Name="hidadd" Margin="0,10,0,0" Height="30"></TextBox>
                            <Button x:Name="savehid" Content="添加" Margin="0,10,0,0" Height="30" Click="savehid_Click"></Button>
                            <Button x:Name="delhid" Content="删除" Margin="0,10,0,0" Height="30" Click="delhid_Click"></Button>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </TabItem>
            <TabItem Header=" 日  志 ">
                <ScrollViewer Margin="50,10,50,10">
                    <TextBox x:Name="logbox" Text=">>> Logs-懒得认真做界面-反正最后要隐藏"/>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
